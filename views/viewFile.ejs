<!-- views/viewFile.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <h3><%= details.name %></h3>
  <p>File size: <%= details.size %> kilobytes</p>
  <p>Uploaded: <%= details.time %></p>

  <form action="/viewfile/delete" method="post">
    <input type="number" name="fileId" id="fileId" hidden readonly value="<%= details.id %>">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this file?');">Delete File</button>
  </form>

  <a href="/files">Root Directory</a>
  
</body>
</html>
